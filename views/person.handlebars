
<h2> All about {{person.name}}</h2> 

 

<h3>Name : {{person.name}}</h3> 

 

{{#if person.dob}} 

<h3>Date of Birth : {{person.dob}}</h3> 

{{/if}} 


<img src={{person.imageurl}} alt="photo of the person" id="photo">

<ul>
  <h1>Super Power : </h1>
  {{#each person.hobbies}}
    <li>{{this}}</li>
  {{/each}}
</ul>

<ul style="top: 50;">
  <a href='{{person.name}}/edit'>
  <button class="bn5" id="editbtn">Edit</button></a>

  <a href='/friends/{{person.name}}/delete'
  onclick="return confirm('are you sure you want to delete this person?');">
  <button class="bn5" id="deletebtn">Delete</button> </a>
</ul>