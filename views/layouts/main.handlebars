    toggle.onclick = function(){
      toggle.classList.toggle('active');
      body.classList.toggle('active');
      //footer.classList.toggle('active');
      replaceColors();
    }

    function replaceColors(){
      var listDivs = document.body.getElementsByTagName("*");
      for (i = 0; i<listDivs.length; i++){
        div=listDivs[i];
        if(window.getComputedStyle(div).getPropertyValue('color')=="rgb(43, 43, 43)"){
          div.style.color = "#f8f8f8";
        }
        else{
          if(window.getComputedStyle(div).getPropertyValue('color')=="rgb(248, 248, 248)"){
            div.style.color = "#2b2b2b";
          } 
        }
      }
    }

  </script>

